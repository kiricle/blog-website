<%- include('partials/header') -%>
  <h1>Compose</h1>
  <form action="/compose" method="post">
    <div class="form-group">
      <label for="newArticleTitle">Title</label>
      <input class="form-control" type="text" name="newArticleTitle">
    </div>
    <div class="form-group">
      <label for="newArticleContent">Post</label>
      <textarea class="form-control" name="newArticleContent" cols="40" rows="5"></textarea>
    </div>
    <button class="btn btn-lg btn-info" type="submit">Publish</button>
  </form>
  <%- include('partials/footer') -%>